<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </div>
  <div>
      <%= f.label :category %> <br>
      <div class="radio_buttons">
        <%= f.radio_button("category", "teaching") %>
        <%= f.label :teaching %> <br>
        <%= f.radio_button("category", "programming") %>
        <%= f.label :programming %> <br>
        <%= f.radio_button("category", "writing") %>
        <%= f.label :writing %> <br>
        <%= f.radio_button("category", "general") %>
        <%= f.label :general %> <br>      
      </div>
    </div>
    <div class="field">
      <%= f.label :screenshot %><br>
      <%= f.file_field :screenshot %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
