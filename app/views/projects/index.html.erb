<div class="row panel">
  <div class="medium-12 columns">
    <h1>Project Index</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Description</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= link_to "#{project.title}", project %></td>
            <td><%= project.category.capitalize %></td>
            <td><%= project.preview.html_safe %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>