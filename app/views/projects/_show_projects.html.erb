<br>
<% @projects.each do |project| %>
  <div class="row">
    <% if project.screenshot_file_name != nil %>
      <%= image_tag project.screenshot.url(:medium), alt: "#{project.title}", 
        :class => "medium-4 columns text-center" %>
    <% end %>
    <div class="medium-8 columns">
      <h3> <%= link_to "#{project.title}", project %> </h3>
      <p> <%= project.preview.html_safe %> </p>
      <%= link_to "More...", project %>
      <br><br>
    </div>
    <br>
    <hr>
  </div>
<% end %>
