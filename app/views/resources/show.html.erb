<div class="row panel">
  <div class="medium-8 columns">
    <h1>
      <%= @resource.title %>
    </h1>

    <hr>

    <p>
      <%= @resource.description.html_safe %>
    </p>

    <p>
      <%= link_to @resource.link, @resource.link %>
    </p>

    <p>
      <strong>Tags:</strong>
      <%= @resource.tags %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= @resource.category.capitalize %>
    </p>

    <%= link_to 'Back', request.referer %>

    <%= render partial: "shared/admin_links", 
               locals: { controller: "resources", resource: @resource } %>

  </div>

  <%= render 'sidebar' %>
</div>