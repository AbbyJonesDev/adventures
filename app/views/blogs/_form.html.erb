      <%= f.label :category %> <br>
      <div class="radio_buttons">
        <%= f.radio_button("category", "teaching") %>
        <%= f.label :teaching %> <br>
        <%= f.radio_button("category", "programming") %>
        <%= f.label :programming %> <br>
        <%= f.radio_button("category", "writing") %>
        <%= f.label :writing %> <br>
        <%= f.radio_button("category", "general") %>
        <%= f.label :general %> <br>      
      </div>
    </div>

    <%= f.label :tags %>
    <%= f.text_field :tags %>

    <%= f.label :publish %>
    <%= f.check_box :publish %>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>